<%- include('../partials/header') %>

<table class="items-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th>Unit Price</th>
      <th>Category</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% items.forEach((item) => { %>
    <tr>
      <td><%= item.name %></td>
      <td><%= item.quantity %></td>
      <td><%= item.unit_price %></td>
      <td><%= item.category_name %></td>
      <td class="actions">
        <button>Update</button>
        <button>Delete</button>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>

<%- include('../partials/footer') %>
